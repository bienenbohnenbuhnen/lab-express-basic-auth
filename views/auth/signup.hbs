<div id="form">
  <h2>Sign Up</h2>
  <form action="/signup" method="POST">
    <label>Username
      <input type="text" name="username" placeholder="zindedinezidane123" />
    </label>
    <label>Password
      <input type="text" name="password" placeholder="*********" />
    </label>

    <button type="submit">Create account</button>

    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>